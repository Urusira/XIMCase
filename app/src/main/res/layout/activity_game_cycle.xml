<?xml version="1.0" encoding="utf-8"?>
<!-- См активити велком пейдж, большую часть элементов разобрал там -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nonOrganicalChem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background_welcome"
    android:gravity="center"
    android:fillViewport="true"
    tools:context=".StartNewGame">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#EDEBED"
            android:gravity="center">
            <TextView
                android:id="@+id/questionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fishShort"
                android:textSize="21sp"
                android:textColor="#444444"/>

            <LinearLayout
                android:id="@+id/progress_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:max="10"
                    android:minHeight="50dp"
                    android:progress="0"
                    android:indeterminate="false"/>
                <TextView
                    android:id="@+id/progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:padding="14sp"
                    android:textColor="#444444"
                    tools:text="0/10"/>


            </LinearLayout>

            <TextView
                android:id="@+id/optionOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/option_bg"
                android:gravity="center"
                android:padding="15dp"
                android:textSize="18sp"
                android:text="@string/app_name"
                />
            <TextView
                android:id="@+id/optionTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/sel_option_bg"
                android:gravity="center"
                android:padding="15dp"
                android:textSize="18sp"
                android:text="@string/app_name"
                />
            <TextView
                android:id="@+id/optionThree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/option_bg"
                android:gravity="center"
                android:padding="15dp"
                android:textSize="18sp"
                android:text="@string/app_name"
                />
            <TextView
                android:id="@+id/optionFour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/option_bg"
                android:gravity="center"
                android:padding="15dp"
                android:textSize="18sp"
                android:text="@string/app_name"
                />
            <Button
                android:id="@+id/nextQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:backgroundTint="#DEDEEE"
                android:gravity="center"
                android:padding="15dp"
                android:textSize="21sp"
                android:text="Подтвердить"
                android:textColor="#444444"
                android:textStyle="bold"
                android:textAllCaps="true"
                />
            <TextView
                android:id="@+id/explane"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="0dp"
                android:text=""
                android:textSize="21sp"
                android:textColor="#444444"/>

        </LinearLayout>

</ScrollView>